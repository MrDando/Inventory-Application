extends layout

block content
	main
		header.header-dynamic
			h2= title

		div
			if itemList.length
				p #[strong Delete the following items before attempting to delete this category.]
				dl
					each item in itemList
						dt
							a(href=item.url) #{item.name}
			
			else
				p Do you really want to delete this Category?

				form(method='POST' action='')
					div.form-group
						input#categoryid(type='hidden',name='categoryid', required='true', value=category._id )

					button.card-btn.btn-delete(type='submit') Delete