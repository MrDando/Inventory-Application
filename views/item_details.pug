extends layout

block content
	main
		h2= title 

		table 
			tr 
				th #
				th Size
				th Color
				th Stock
			-var count = 0
			each itemInstance in itemInstanceList 
				-count += 1
				tr
					td(class='td-center')= count
					td(class='td-center')= (!(itemInstance.size == 'false')) ? itemInstance.size : '/'
					td(class='td-center')= itemInstance.color
					td(class='td-center')= itemInstance.stock
